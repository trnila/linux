#include "bcm2709-rpi-2-b.dts"

/ {
	reserved-memory {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		// reserve memory for baremetal application
		baremetal {
			reg = <0x20000000 0x20000000>;
		};
	};

	soc {
		baremetal-mailbox@40000000 {
			compatible = "baremetal-mailbox";
			#mbox-cells = <0x0>;
			interrupt-parent = <&local_intc>;
			interrupts = <6>;
			phandle = <0x100>;
			reg = <0x40000000 0x100>; // still not working
		};

	};

	user_io@0 {
      compatible = "mydevice,generic-uio,ui_pdrv";
      status = "okay";
      interrupt-parent = <&local_intc>;
      			interrupts = <6>;
      };
};
